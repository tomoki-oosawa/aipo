  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>findbugs-maven-plugin</artifactId>
          <version>3.0.0</version>
        <configuration>
          <onlyAnalyze>com.aimluck.-</onlyAnalyze>
          <effort>Max</effort>
          <findbugsXmlOutput>true</findbugsXmlOutput>
          <xmlOutput>true</xmlOutput>
          <excludeFilterFile>findbugs-exclude.xml</excludeFilterFile>
        </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.2</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
          <failOnError>true</failOnError>
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>
      <plugin>
        <groupId>com.mycila</groupId>
        <artifactId>license-maven-plugin</artifactId>
        <version>2.8</version>
        <configuration>
          <header>header.txt</header>
          <mapping>
            <xreg>XML_STYLE</xreg>
            <psml>XML_STYLE</psml>
          </mapping>
          <includes>
            <include>**/src/**/*.java</include>
            <include>**/src/**/*.vm</include>
            <include>**/src/**/*.html</include>
            <include>**/src/**/*.xml</include>
            <include>**/src/**/*.xreg</include>
            <include>**/src/**/*.psml</include>
            <include>**/src/**/*.js</include>
            <include>**/src/**/*.css</include>
            <include>**/src/**/*.jsp</include>
            <include>**/src/**/*.xsl</include>
            <include>**/src/**/*.properties</include>
            <include>**/*.sql</include>
          </includes>
          <excludes>
            <exclude>**/src/main/java/org/apache/**/*.*</exclude>
            <exclude>**/src/main/java/info/bliki/**/*.*</exclude>
            <exclude>**/src/main/java/com/aimluck/eip/cayenne/om/**/auto/*.*</exclude>
            <exclude>**/src/main/resources/org/apache/**/*.*</exclude>
            <exclude>**/src/test/java/org/apache/**/*.*</exclude>
            <exclude>**/src/test/resources/org/apache/**/*.*</exclude>
            <exclude>**/src/main/webapp/javascript/dijit/**/*.*</exclude>
            <exclude>**/src/main/webapp/javascript/dojo/**/*.*</exclude>
            <exclude>**/src/main/webapp/javascript/dojox/**/*.*</exclude>
            <exclude>**/src/main/webapp/javascript/aipo.js</exclude>
            <exclude>**/*.min.js</exclude>
            <exclude>**/*.ycomp.js</exclude>
            <exclude>**/*-all.js</exclude>
            <exclude>**/*.min.css</exclude>
          </excludes>
          <encoding>UTF-8</encoding>
          <strictCheck>true</strictCheck>
          <skipExistingHeaders>false</skipExistingHeaders>
          <properties>
            <year>2015</year>
          </properties>
          <headerDefinitions>
            <headerDefinition>header-definition.xml</headerDefinition>
          </headerDefinitions>
        </configuration>
      </plugin>
      <plugin>
         <groupId>org.apache.maven.plugins</groupId>
         <artifactId>maven-war-plugin</artifactId>
         <version>2.6</version>
      </plugin>
    </plugins>
  </build>

